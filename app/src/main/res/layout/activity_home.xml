<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/gradient_background">

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navigationButton"
        android:layout_width="397dp"
        android:layout_height="76dp"
        android:background="@drawable/round_conner"
        app:itemActiveIndicatorStyle="@style/MaterialAlertDialog.Material3"
        app:itemIconSize="40dp"
        app:itemIconTint="@android:color/white"
        app:itemTextAppearanceActive="@style/Animation.Design.BottomSheetDialog"
        app:itemTextAppearanceInactive="@style/Animation.Design.BottomSheetDialog"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1"
        app:menu="@menu/navigation_button" >
    </com.google.android.material.bottomnavigation.BottomNavigationView>



    <androidx.fragment.app.FragmentContainerView
            android:id="@+id/fragmentContainerView"
            android:name="com.example.appnumthesis.HomeFragment"
            android:layout_width="411dp"
            android:layout_height="652dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0." />

</androidx.constraintlayout.widget.ConstraintLayout>